<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data>
        
        <record model="ir.actions.act_window" id="space_flight_list_action">
            <field name="name">Spaceships</field>
            <field name="res_model">spaceflight.spaceship</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create the first spaceship record
                </p>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="space_flight_mission_list_action">
            <field name="name">Missions</field>
            <field name="res_model">spaceflight.mission</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    create the first mission record
                </p>
            </field>
        </record>
        
        <menuitem name="Space_flight"
            id="menu_space_flight"
            sequence="1"/>
                       
        <menuitem id="menu_space_flight_sub" name="Space Flight" parent="menu_space_flight" sequence="2"/>
        
        <menuitem id="menu_space_flight_spaceships" name="Space Ships" parent="menu_space_flight_sub"
                  sequence="3"
                  action="space_flight_list_action"/>
        
        <menuitem id="menu_space_flight_missions" name="Missions" parent="menu_space_flight_sub"
                  sequence="4"
                  action="space_flight_mission_list_action"/>
    </data>
</odoo>

